<Window x:Class="OpenFileDialog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CSharp file unifier" Height="150" Width="525">
    <Canvas Background="LightBlue">
        <TextBlock Margin="10" FontWeight="Bold">Please choose the files you would like to unify:</TextBlock>
        <TextBox Height="32" HorizontalAlignment="Left" Margin="6,27,0,0" Name="FileNameTextBox"
                 VerticalAlignment="Top" Width="393" />
        <Button Content="Browse" Height="32" HorizontalAlignment="Left" Margin="405,27,0,0"
                Name="button1" VerticalAlignment="Top" Width="88" Click="FilePicker" />
        <Button Content="Unify files!" Height="32" Width="88" Canvas.Top="70" Canvas.Left="6" Foreground="Red" Click="UnifyFiles"></Button>
    </Canvas>
</Window>
